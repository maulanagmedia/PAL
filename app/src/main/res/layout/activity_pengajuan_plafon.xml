<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp20"
    tools:context=".Activity.PengajuanPlafon">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer"
        android:textSize="@dimen/sp14"/>

    <TextView
        android:id="@+id/txt_nama_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="@dimen/sp20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plafon Nota"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp14"/>

    <EditText
        android:id="@+id/txt_plafon_nota"
        android:layout_width="@dimen/pengajuan_penambahan_plafon_text_width"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="@dimen/sp20"
        android:theme="@style/GreenViewTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plafon Nominal"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp14"/>

    <EditText
        android:id="@+id/txt_plafon_nominal"
        android:layout_width="@dimen/pengajuan_penambahan_plafon_text_width"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="@dimen/sp20"
        android:theme="@style/GreenViewTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alasan pengajuan"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp14"/>

    <EditText
        android:id="@+id/txt_alasan_pengajuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:textSize="@dimen/sp20"
        android:theme="@style/GreenViewTheme"/>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="@dimen/pengajuan_penambahan_plafon_button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="Simpan"
        android:padding="@dimen/dp10"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>