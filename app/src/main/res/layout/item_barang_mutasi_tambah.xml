<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginTop="@dimen/dp20"
        android:layout_toStartOf="@id/btn_tambah"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp16"/>

    <TextView
        android:id="@+id/txt_harga"
        android:layout_below="@id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_toStartOf="@id/btn_tambah"
        android:textSize="@dimen/sp14"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_jumlah"
        android:layout_below="@id/txt_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/btn_tambah"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp20"
        android:textSize="@dimen/sp14"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_tambah"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp20"
        android:background="@drawable/style_rounded_green_rectangle"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:text="Tambah"
        android:textAllCaps="false"
        android:textSize="@dimen/sp10"
        android:layout_height="@dimen/medium_icon_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txt_jumlah"
        android:background="#f2f2f2"/>

</RelativeLayout>