<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/dp10"
    android:layout_margin="@dimen/dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp20">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp20"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/medium_icon_size"
                android:layout_height="@dimen/medium_icon_size"
                android:src="@drawable/checked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPROVAL"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="22sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.card.MaterialCardView
                    android:id="@+id/btn_customer"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/approval_button_height"
                    android:layout_margin="@dimen/dp10"
                    app:cardCornerRadius="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0078AA"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/costumer" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_weight="0.8"
                            android:background="@android:color/transparent"
                            android:text="Customer"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.design.card.MaterialCardView>

                <android.support.design.card.MaterialCardView
                    android:id="@+id/btn_so"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/approval_button_height"
                    app:cardCornerRadius="@dimen/dp10"
                    android:layout_margin="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#004FAA"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dataso" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_weight="0.8"
                            android:background="@android:color/transparent"
                            android:text="Sales Order (SO)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.design.card.MaterialCardView>

                <android.support.design.card.MaterialCardView
                    android:id="@+id/btn_po"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/approval_button_height"
                    android:layout_margin="@dimen/dp10"
                    app:cardCornerRadius="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0B00AA"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/datacanvas" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_weight="0.8"
                            android:background="@android:color/transparent"
                            android:text="Purchase Order (PO)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.design.card.MaterialCardView>

                <android.support.design.card.MaterialCardView
                    android:id="@+id/btn_retur"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/approval_button_height"
                    app:cardCornerRadius="@dimen/dp10"
                    android:layout_margin="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#3E00AA"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/back" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_weight="0.8"
                            android:background="@android:color/transparent"
                            android:text="Retur Barang"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.design.card.MaterialCardView>

                <android.support.design.card.MaterialCardView
                    android:id="@+id/btn_dispensasi"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="@dimen/approval_button_height"
                    app:cardCornerRadius="@dimen/dp10"
                    android:layout_margin="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6C00AA"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/piutang" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_weight="0.8"
                            android:background="@android:color/transparent"
                            android:text="Dispensasi Piutang"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.design.card.MaterialCardView>

                <android.support.design.card.MaterialCardView
                    android:id="@+id/btn_login"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/approval_button_height"
                    app:cardCornerRadius="@dimen/dp10"
                    android:layout_margin="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#A400AA"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/login" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_weight="0.8"
                            android:background="@android:color/transparent"
                            android:text="Login Pengganti"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.design.card.MaterialCardView>

                <android.support.design.card.MaterialCardView
                    android:id="@+id/btn_plafon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/approval_button_height"
                    app:cardCornerRadius="@dimen/dp10"
                    android:layout_margin="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AA0060"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/tambah_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_weight="0.8"
                            android:background="@android:color/transparent"
                            android:text="Penambahan Plafon"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.design.card.MaterialCardView>

                <android.support.design.card.MaterialCardView
                    android:id="@+id/btn_mutasi"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="@dimen/approval_button_height"
                    app:cardCornerRadius="@dimen/dp10"
                    android:layout_margin="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AA0028"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_size"
                            android:layout_weight="0.2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/mutasi" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_weight="0.8"
                            android:background="@android:color/transparent"
                            android:text="Pengajuan Mutasi"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.design.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.design.card.MaterialCardView>